#!/usr/bin/env bash

./install_nvim

dotfiles=(
  '.zshrc'
  '.aliases'
  '.spaceship_profile'
  '.devvars'
)

for f in "${dotfiles[@]}"
do
  echo $f
  rm -rf ~/$f
  ln -s $SCRIPT_DIR/$f ~/$f
done

echo $ZSH_CUSTOM

rm -rf ~/.oh-my-zsh/custom/themes/spaceship.zsh-theme
ln -s $SCRIPT_DIR/spaceship.zsh-theme ~/.oh-my-zsh/custom/themes/spaceship.zsh-theme
