:: default
:: work

default < ctrl - 0x1D ; work
work < ctrl - 0x1D ; default

default, work < ctrl - 1 : open -a /Applications/Alacritty.app/Contents/MacOS/alacritty

# only default
default < ctrl - 2 : open -a /Applications/Arc.app/Contents/MacOS/Arc
default < ctrl - 3 : open -a /Applications/Discord.app/Contents/MacOS/Discord
default < ctrl - 8 : open -a /System/Applications/Messages.app/Contents/MacOS/Messages
default < ctrl - 9 : open -a /Applications/WhatsApp.app/Contents/MacOS/WhatsApp

# only work
work < ctrl - 2 : open -a "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
